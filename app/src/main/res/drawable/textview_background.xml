<!-- res/drawable/textview_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light gray background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background for shadow effect -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#B0B0B0"/> <!-- Border color -->
        </shape>
    </item>
</layer-list>
